{% extends "admin/MainAdmin.html.twig" %}

{% block content %}
<div class="table-responsive">
    <table class="table table-striped table-sm">
    <thead>
        <tr>
        <th>Code competence</th>
        <th>Intitule</th>
        <th>Capacite</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for competence in competences %}
        <tr>
            <td>{{ competence.code_competence }}</td>
            <td>{{ competence.intitule }}</td>
            <td>{{ competence.capacite.intitule }}</td>
            <td><a href="{{ path('admin_competence',{ 'action': 'edit' , 'competence': competence.id }) }}"><i class="fas fa-pencil-alt"></i></a> <a href="{{ path('admin_competence',{ 'action': 'del' , 'competence': competence.id }) }}"><i class="fa fa-trash" ></i></a></td>
        </tr>    
        {% endfor %}
    </tbody>
    </table>
</div>
{% if form is defined %}
<hr>
{{ form_start(form) }}

    <div class="form-group">
    <label for="exampleInputEmail1">Code :</label>
 {{ form_widget(form.code_competence, {'attr': {'class': 'form-control'}}) }}
 </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Intitule :</label>
 {{ form_widget(form.intitule, {'attr': {'class': 'form-control'}}) }}
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Capacite :</label>
 {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
  </div>
  
  <button type="submit" class="btn btn-success">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}
</div>
{% else %}
<a class="btn tbn primary" href="{{ path('admin_competence',{ 'action': 'add' }) }}">Creer une nouvelle Competence</a>
{% endif %}
{% endblock %}