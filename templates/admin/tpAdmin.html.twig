{% extends "admin/MainAdmin.html.twig" %}

{% block content %}

<a class="btn tbn primary" href="{{ path('admin_tp',{ 'action': 'add' }) }}">Creer un nouveau Tp</a>
{% if form is defined %}
<hr>
{{ form_start(form) }}

    <div class="form-group">
    <label for="exampleInputEmail1">Nom :</label>
 {{ form_widget(form.nom_tp, {'attr': {'class': 'form-control'}}) }}
 </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Domaine :</label>
 {{ form_widget(form.domaine, {'attr': {'class': 'form-control'}}) }}
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Numero :</label>
 {{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Nom du fichier :</label>
 {{ form_widget(form.nom_fichier, {'attr': {'class': 'form-control'}}) }}
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Descriptif :</label>
 {{ form_widget(form.descriptif, {'attr': {'class': 'form-control'}}) }}
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Niveau :</label>
 {{ form_widget(form.niveau, {'attr': {'class': 'form-control'}}) }}
  </div>
  <button type="submit" class="btn btn-success">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}
</div>
{% endif %}
<div class="table-responsive">
    <table class="table table-striped table-sm">
    <thead>
        <tr>
        <th>Nom</th>
        <th>Domaine</th>
        <th>Numero</th>
        <th>Nom fichier</th>
        <th>Descriptif</th>
        <th>Niveau</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for tp in tps %}
        <tr>
            <td>{{ tp.nom_tp }}</td>
            <td>{{ tp.domaine }}</td>
            <td>{{ tp.numero }}</td>
            <td>{{ tp.nom_fichier }}</td>
            <td>{{ tp.descriptif }}</td>
            <td>{% if tp.niveau %}{{ tp.niveau.nom }}{% endif %}</td>
            <td><a href="{{ path('admin_tp',{ 'action': 'edit' , 'tp': tp.id }) }}"><i class="fas fa-pencil-alt"></i></a> <a href="{{ path('admin_tp',{ 'action': 'del' , 'tp': tp.id }) }}"><i class="fa fa-trash" ></i></a></td>
        </tr>    
        {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}