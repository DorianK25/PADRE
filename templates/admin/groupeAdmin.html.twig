{% extends "admin/MainAdmin.html.twig" %}

{% block content %}
<div class="table-responsive">
    <table class="table table-striped table-sm">
    <thead>
        <tr>
        <th>Nom</th>
        <th>Classe</th>
        <th>Action</th>
        </tr>
    </thead>
    <tbody>
        {% for groupe in groupes %}
        <tr>
            <td>{{ groupe.nom_groupe }}</td>
            <td>{{ groupe.classe.nom_classe }}</td>
            <td><a href="{{ path('admin_groupe',{ 'action': 'edit' , 'groupe': groupe.id }) }}"><i class="fas fa-pencil-alt"></i></a> <a href="{{ path('admin_groupe',{ 'action': 'del' , 'groupe': groupe.id }) }}"><i class="fa fa-trash" ></i></a></td>
        </tr>    
        {% endfor %}
    </tbody>
    </table>
</div>
{% if form is defined %}
<hr>
{{ form_start(form) }}

    <div class="form-group">
    <label for="exampleInputEmail1">Nom :</label>
 {{ form_widget(form.nom_groupe, {'attr': {'class': 'form-control'}}) }}
 </div>
  <div class="form-group">
    <label for="exampleInputEmail1">Classe :</label>
 {{ form_widget(form.classe, {'attr': {'class': 'form-control'}}) }}
  </div>
  <button type="submit" class="btn btn-success">{{ button_label|default('Valider') }}</button>
{{ form_end(form) }}
</div>
{% else %}
<a class="btn tbn primary" href="{{ path('admin_groupe',{ 'action': 'add' }) }}">Creer une nouveau Groupe</a>
{% endif %}
{% endblock %}