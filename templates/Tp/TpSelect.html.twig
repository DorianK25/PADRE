{% extends "base.html.twig" %}


{% block body %}
<body>
<select id="classe">
    
    {% for classe in classes %}
        <option {% if eleveParClasse is empty %}{% else %}{% set first = eleveParClasse["eleve"]|first %}{% if classe.id == first.classe.id %}selected{% endif %}{% endif %} value="{{ classe.id }}">{{ classe.nom_classe }} {{ classe.annee }}</option>
    {% endfor %}
    
</select>
<select id="niveau">
    
    {% for niveau in niveaux %}
        <option {% if tps is empty %}
    {% else %}{% if niveau.id == tps[0].niveau.id %}selected{% endif %}{% endif %} value="{{ niveau.id }}">{{ niveau.nom }}</option>
    {% endfor %}
    
</select>

    <table>
        <tr>
            <td></td>
            {% for tp in tps %}
                <td>{{ tp.nom_tp }}</td>
            {% endfor %}
        </tr>
        {% for eleve in eleveParClasse["eleve"] %}
                <tr>
                    <td class="eleve" eleve="{{ eleve.id }}">{{ eleve.nom }} {{ eleve.prenom }}</td>
                    {% for tp in tps %}
                        <td style="background-color:{% if eleveParClasse[eleve.id]["planning"][tp.id] is defined %}{{ eleveParClasse[eleve.id]["planning"][tp.id].planning.couleur }}{% endif %}">
                            {% if note[eleve.id][tp.id] is defined %}
                                {% if note[eleve.id][tp.id].etat == "not√©" %}
                                    {{ note[eleve.id][tp.id].note }} / 20
                                {% else %}
                                    - 
                                {% endif %}
                            {% else %}
                                - 
                            {% endif %}
                        </td>
                    {% endfor %}
                </tr>
        {% endfor %}
    </table>
    <table>
        
        {% for planning_ in planning %}

            <tr>
                <td>{{ planning_.planning.date | date("d/m/Y")  }}</td>
            </tr>
            <tr>
                <td style="background-color:{{ planning_.planning.couleur }}">&nbsp; </td>
            </tr>

        {% endfor %}
        

    </table>

</body>
{% endblock %}


{% block style %}

<style>


table, th, td {
  border: 1px solid black;
}

table,select{
    margin-top:15px;
    margin-left:10px;
}



td{
    text-align:center;
}

</style>


{% endblock %}


{% block script %}

<script>
$(document).on("click",".eleve",function () {

    document.location.href="/PADRE/public/eleve/index?id="+$(this).attr("eleve")+"&niveau="+$("#niveau").val();

});
$("#classe").change(function(){
    document.location.href="/PADRE/public/Tp/resume?classe="+$(this).val()+"&niveau="+$("#niveau").val();
});
$("#niveau").change(function(){
    document.location.href="/PADRE/public/Tp/resume?classe="+$("#classe").val()+"&niveau="+$(this).val();
});



</script>
{% endblock %}