{% extends "base.html.twig" %}

{% block body %}

<div id="conteneur">
    <div class="container">
    <div class="main-body">    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="http://192.168.1.42/PADRE/src/img/{{ eleve.url_photo }}" width="150">
                    <div class="mt-3">
                      <h4>{{ eleve.nom }} {{ eleve.prenom }}</h4>
                    </div>
                  </div>
                  <a class="btn btn-secondary" href="{{ path('tpIndex',{ 'classe': eleve.classe.id }) }}">retour</a>
                </div>
                
              </div>
              
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Date de naissance</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ eleve.date_naissance | date("d/m/Y") }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ eleve.mail }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Binome</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ eleve.Binome }}
                    </div>
                  </div>
                  <hr>
                  
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Classe</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ eleve.classe }}
                    </div>
                  </div>
                </div>
              </div>
              <div class="row gutters-sm">
                <div class="col-sm-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="col-sm-9s">Tp réalisé</h6>
                      <div class="mb-3" style="height: 5px">
                      </div>
                      {% for tpNote in tpsNote %}
                      <small>{{ tpNote.tp.nom_tp }}</small>
                      <div class="mb-3" style="height: 5px">
                      </div>
                      {% endfor %}
                    </div>
                  </div>
                </div>
                <div class="col-sm-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="col-sm-9s">Tp à realisé</h6>
                      <div class="mb-3" style="height: 5px">
                      </div>
                     {% for tpAR in tpsAR %}
                      <small>{{ tpAR.nom_tp }}</small>
                      <div class="mb-3" style="height: 5px">
                      </div>
                      {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div></div>

{% endblock %}

{% block style %}

<style>

#conteneur{

    width:100%;
    padding: 25px;
    text-align: center;

}

</style>


{% endblock %}